# Application Environment
APP_ENV=development
APP_TIMEZONE=Europe/Vienna
APP_URL=http://localhost/bazar

# Database Configuration
DB_HOST=localhost
DB_NAME=bazar_marketplace
DB_USER=root
DB_PASS=

# Redis Configuration (optional)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production-please-make-it-long-and-random

# Google Vision API (for AI image analysis)
GOOGLE_VISION_API_KEY=your-google-vision-api-key-here

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM_EMAIL=noreply@bazar.local
SMTP_FROM_NAME="Bazar Marketplace"

# File Upload Limits
MAX_UPLOAD_SIZE=10485760
MAX_IMAGES_PER_ARTICLE=10

# AI Configuration
AI_BATCH_SIZE=10
AI_PROCESSING_TIMEOUT=300
AI_CACHE_TTL=3600

# Performance Settings
ENABLE_QUERY_CACHE=true
ENABLE_REDIS_CACHE=true
ENABLE_FILE_CACHE=true

# Security Settings
RATE_LIMIT_PER_MINUTE=60
ENABLE_2FA=false
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL=info
LOG_RETENTION_DAYS=30