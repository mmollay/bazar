{
    "name": "bazar/marketplace",
    "description": "A modern marketplace application with advanced features",
    "type": "project",
    "keywords": ["marketplace", "e-commerce", "php", "mysql"],
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "ext-curl": "*",
        "ext-gd": "*",
        "vlucas/phpdotenv": "^5.5",
        "firebase/php-jwt": "^6.8",
        "league/oauth2-google": "^4.0",
        "league/oauth2-facebook": "^2.2",
        "twilio/sdk": "^7.0",
        "phpmailer/phpmailer": "^6.8",
        "intervention/image": "^2.7",
        "elasticsearch/elasticsearch": "^8.0",
        "predis/predis": "^2.2",
        "monolog/monolog": "^3.4",
        "ramsey/uuid": "^4.7",
        "symfony/validator": "^6.3",
        "symfony/http-foundation": "^6.3",
        "league/flysystem": "^3.15",
        "stripe/stripe-php": "^10.0",
        "paypal/rest-api-sdk-php": "^1.14",
        "google/cloud-translate": "^1.12",
        "spatie/image-optimizer": "^1.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "fakerphp/faker": "^1.23"
    },
    "autoload": {
        "psr-4": {
            "Bazar\\": "backend/",
            "Bazar\\Api\\": "backend/api/",
            "Bazar\\Models\\": "backend/models/",
            "Bazar\\Controllers\\": "backend/controllers/",
            "Bazar\\Services\\": "backend/services/",
            "Bazar\\Middleware\\": "backend/middleware/",
            "Bazar\\Config\\": "backend/config/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bazar\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse backend/",
        "cs-check": "phpcs --standard=PSR12 backend/",
        "cs-fix": "phpcbf --standard=PSR12 backend/",
        "post-install-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}